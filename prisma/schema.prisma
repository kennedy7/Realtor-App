// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  phone            String
  email            String
  password         String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  user_Type        userType
  homes            Home[]
  buyer_messages   Message[] @relation("buyer_messages")
  realtor_messages Message[] @relation("realtor_messages")
}

model Home {
  id                  Int          @id @default(autoincrement())
  address             String
  number_of_bedrooms  Int
  number_of_bathrooms Float
  city                String
  listed_date         DateTime     @default(now())
  price               Float
  land_size           Float
  propertyType        PropertyType
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  //multiple images related to one home
  image               Image[]
  realtor_id          Int
  //many to one relationship [one realtor to many homes]
  realtor             User         @relation(fields: [realtor_id], references: [id])
  messages            Message[]
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  home_id   Int
  //many to one relationship 
  home      Home     @relation(fields: [home_id], references: [id])
}

model Message {
  id         Int    @id @default(autoincrement())
  message    String
  home_id    Int
  //many to one relationship 
  home       Home   @relation(fields: [home_id], references: [id])
  realtor_id Int
  realtor    User   @relation("buyer_messages", references: [id], fields: [realtor_id])
  buyer_id   Int
  buyer      User   @relation("realtor_messages", references: [id], fields: [buyer_id])
}

enum PropertyType {
  RESIDENTIAL
  CONDO
}

enum userType {
  BUYER
  REALTOR
  ADMIN
}
